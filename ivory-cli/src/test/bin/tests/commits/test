#!/bin/sh -eux

DIR=$(dirname $0)
. "${DIR}/../../setup.sh"

commit_test(){
  diff_test ${REPOSITORY}/metadata/commits/${1} ${DIR}/expected/${1}
}

$IVORY create-repository -p "${REPOSITORY}"
commit_test 00000000

$IVORY import-dictionary -r "${REPOSITORY}" -p "${INPUT}/dictionary.psv"
commit_test 00000001

$IVORY ingest -r "${REPOSITORY}" -z "Australia/Sydney" -i "${INPUT}/facts"  -n HALIBUT
commit_test 00000002

$IVORY import-dictionary -r "${REPOSITORY}" -p "${INPUT}/dictionary.psv"
commit_test 00000003
