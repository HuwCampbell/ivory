#!/bin/sh -eu

DIR=$(dirname $0)

PROJECT="${DIR}/../../../.." . "${DIR}/build.sh"

FAILED=""

# Run all the tests, capturing any failures
for TEST in ${DIR}/tests/*; do
    echo "*** Executing `basename ${TEST}` ***"
    echo
    "${TEST}/test" || {
        FAILED="${FAILED}${TEST} "
    }
    echo
done

# Delete all the test data at the end
rm -rf ${DIR}/../../../../../target/tmp

if [ -n "${FAILED}" ]; then
    echo "Tests failed!"
    for TEST in ${FAILED}; do echo "* ${TEST}"; done
    exit 1
else
    echo "Tests passed!"
fi


