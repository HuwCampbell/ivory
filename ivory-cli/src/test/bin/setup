#!/bin/sh -eux

TEST=$(dirname $0)
COMMON=${TEST}/../..
PROJECT=${TEST}/../../../../../..
IVORY=${IVORY:-}

# Disable Snappy for us poor OSX users
export IVORY_NO_CODEC=1

random() {
    # /bin/sh doesn't have $RANDOM
    date +%N
}

build_ivory() {
    TARGET=${1:-/tmp/test-$(random)}

    echo "Building ivory-cli"

    mkdir -p "${TARGET}"
    ${PROJECT}/sbt ";project cli; clean; universal:package-zip-tarball"
    tar xvf ${PROJECT}/ivory-cli/target/universal/ivory-cli*.tgz --strip-components 1 -C ${TARGET}
    export IVORY=${TARGET}/bin/ivory
}

# Lazily load a specific ivory version from S3 and execute with the supplied extra arguments
ivory_run() {
    VERSION=$1
    shift
    IVORY_CMD=`${COMMON}/ivory-get "${VERSION}"`
    ${IVORY_CMD} "$@"
}

diff_test() {
    diff "$1" "$2"
}

. "${COMMON}/versions"

if [ ! -e "$IVORY" ]; then
    build_ivory
fi
